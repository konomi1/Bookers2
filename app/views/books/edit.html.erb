
<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto" style="width: 200px;">
      <h1>Editing Book</h1>
      <div class="errors-box ">
        <% if @book.errors.any? %>
          <h3><%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div>

      <%= form_with model:@book, local:true do |f|%>

        <div class=field>
        <%= f.label :title, "Title" %><br />
        <%= f.text_field :title, class:"form-control" %>
        </div>

        <div class=field>
        <%= f.label :body, "Opinion" %><br />
        <%= f.text_area :body, class:"form-control" %>
        </div>

        <div id="star-rate<%= @book.id%>"></div>
        <script>
          $('#star-rate<%= @book.id%>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : false,
            readOnly: true,
            score: <%= @book.rate %>,
          });
        </script>

        <div class=field>
        <%= f.submit "Update Book", class:"btn btn-success mt-2 mb-2" %>
        </div>
      <% end %>

      <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>

    </div>
  </div>
</div>