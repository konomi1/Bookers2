
<div class="container">
  <div class="row">
    <div class="col-lg-4 mx-auto" style="width: 400px;">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f|%>

        <div class=field>
        <%= f.label :title, "Title" %><br />
        <%= f.text_field :title%>
        </div>

        <div class=field>
        <%= f.label :body, "Opinion" %><br />
        <%= f.text_area :body %>
        </div>

        <div class=field>
        <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>

      <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>

    </div>
  </div>
</div>