<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"> </th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
      <th scope="col">Category</th>
      <th scope="col"> </th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book|%>
    <tr>
      <td>
        <%= link_to user_path(book) do %>
          <%= attachment_image_tag book.user, :profile_image, fallback:"no_image.jpg", size:'40x40' %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book) do %>
          <%= book.title%>
        <% end %>
      </td>
      <td><%= book.body %></td>
      <td>
        <%= link_to search_books_path(word: book.category) do%>
          <%= book.category %>
        <% end %>
      </td>
      <td>
        <div id='favorites_btn_<%=book.id%>'>
        <%= render 'favorites/favorite', book: book%>
        </div>
      </td>
      <td>コメント数： <%= book.book_comments.count%></td>
      <td>閲覧数:<%= book.impressions_count %></td>
      <td>
        <%= render 'books/star', book: book %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>