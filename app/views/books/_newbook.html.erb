<h2 class="mt-3">New book</h2>
<%=form_with model: newbook, local:true do |f|%>
  <div class="field">
  <p>Title</p>
  <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="field">
  <p>Opinion</p>
  <%= f.text_area :body, class:"form-control" %>
  </div>
  <div>
  <%= f.submit "Create Book", class:"btn btn-success btn-md mt-2" %>
  </div>
<% end %>