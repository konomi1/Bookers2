<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto" style="width: 200px;">
      <h2>User info</h2>
      <div class="errors-box ">
        <% if @user.errors.any? %>
          <h3><%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div>
      <%= form_with model:@user, local:true do |f|%>

        <div class=field>
        <%= f.label :name, "Name" %><br />
        <%= f.text_field :name %>
        </div>

        <div class=field>
        <%= f.label :profile_image, "Image" %><br />
        <%= f.attachment_field :profile_image %>
        </div>

        <div class=field>
        <%= f.label :introduction, "Introduction" %><br />
        <%= f.text_area :introduction %>
        </div>

        <div class=field>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>