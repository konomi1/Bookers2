
<div class="container px-5">
  <div class="row">
    <div class="col-md-3 mt-3">

    <%= render 'users/usersinfo', user: @user %>
    <%= render 'books/newbook', newbook: Book.new %>

    </div>
    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"> </th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th scope="col"> </th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <%= link_to user_path(@user) do%>
                <%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size:'40x40' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
               <%= book.title%>
              <% end %>
            </td>
            <td><%= book.body%></td>
            <td>コメント数: <%= book.book_comments.count%></td>
            <td>
              <div id="star-rate<%= book.id%>"></div>
              <script>
                $('#star-rate<%= book.id%>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : false,
                  readOnly: true,
                  score: <%= book.rate %>,
                });
              </script>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div>
        <h2>投稿数の前日比・前週比</h2>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">今日の投稿数</th>
              <th scope="col">前日の投稿数</th>
              <th scope="col">前日比</th>
            </tr>
          </thead>
          <tbody>
            <td><%= @user.today_count %></td>
            <td><%= @user.yesterday_count %></td>
            <td><%=@user.day_percent%>%</td>
          </tbody>
        </table>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">今週の投稿数</th>
              <th scope="col">前週の投稿数</th>
              <th scope="col">前週比</th>
            </tr>
          </thead>
          <tbody>
            <td><%=@user.this_week%></td>
            <td><%=@user.last_week%></td>
            <td><%=@user.week_percent%>%</td>
          </tbody>
        </table>
      </div>

      <div>
        <h2>7日間分の投稿数</h2>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">6日前</th>
              <th scope="col">5日前</th>
              <th scope="col">4日前</th>
              <th scope="col">3日前</th>
              <th scope="col">2日前</th>
              <th scope="col">1日前</th>
              <th scope="col">今日</th>
            </tr>
          </thead>
          <tbody>
            <td><%= @books.day_book_count(6) %></td>
            <td><%= @books.day_book_count(5) %></td>
            <td><%= @books.day_book_count(4) %></td>
            <td><%= @books.day_book_count(3) %></td>
            <td><%= @books.day_book_count(2) %></td>
            <td><%= @books.day_book_count(1) %></td>
            <td><%= @user.today_count %></td>
          </tbody>
        </table>
      </div>

      <canvas id="myChart" width="400" height="200"></canvas>
      <script>
      $(document).on('turbolinks:load', function() {
          var ctx = document.getElementById('myChart');
          var myChart = new Chart(ctx, {
              type: 'line',
              data: {
                  labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
                  datasets: [{
                      label: '投稿した本の数',
                      data: [
                          <%= @books.day_book_count(6) %>,
                          <%= @books.day_book_count(5) %>,
                          <%= @books.day_book_count(4) %>,
                          <%= @books.day_book_count(3) %>,
                          <%= @books.day_book_count(2) %>,
                          <%= @books.day_book_count(1) %>,
                          <%= @user.today_count %>
                      ],
                      fill: false,
                      borderColor: 'blue',
                      tension: 0.3
                  }]
              },
              options: {
                  scales: {
                      y: {
                          beginAtZero: true,
                          suggestedMax: 10
                      }
                  },
                  plugins: {
                    title: {
                      display: true,
                      text: '7日間の投稿数の比較'
                    }
                  }
              }
          });
      });
      </script>

      <!--日付でbook検索-->
      <%= render 'searchday', {user: @user, records: @records} %>

    </div>
  </div>

</div>

