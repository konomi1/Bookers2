
<div class="container px-5">
  <div class="row">
    <div class="col-md-3 mt-3">

    <%= render 'users/usersinfo', user: @user %>
    <%= render 'books/newbook', newbook: Book.new %>

    </div>
    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"> </th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th scope="col"> </th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <%= link_to user_path(@user) do%>
                <%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size:'40x40' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
               <%= book.title%>
              <% end %>
            </td>
            <td><%= book.body%></td>
            <td>コメント数: <%= book.book_comments.count%></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="day_counts">
        <h2>投稿数の前日比・前週比</h2>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">今日の投稿数</th>
              <th scope="col">前日の投稿数</th>
              <th scope="col">前日比</th>
            </tr>
          </thead>
          <tbody>
            <td><%= @user.today_count %></td>
            <td><%= @user.yesterday_count %></td>
            <td><%=@user.day_percent%>%</td>
          </tbody>
        </table>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">今週の投稿数</th>
              <th scope="col">前週の投稿数</th>
              <th scope="col">前週比</th>
            </tr>
          </thead>
          <tbody>
            <td><%=@user.this_week%></td>
            <td><%=@user.last_week%></td>
            <td><%=@user.week_percent%>%</td>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>

