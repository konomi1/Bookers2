<div class="date-search">
  <%= form_with url:user_path(user), method: :get, remote: true do |f|%>
    <%=f.date_field :created_at %>
    <%= f.submit "検索" %>
  <%end%>

  <h4>検索結果</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">投稿数</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
            <%= records.count %>
        </td>
      </tr>
    </tbody>
  </table>
</div>