<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto" style="width: 200px;">
      <h1>Editing Group</h1>
      <div class="errors-box ">
        <% if @group.errors.any? %>
          <h3><%= pluralize(@group.errors.count,"error") %> prohibited this obj from being saved:</h3>
            <ul>
              <% @group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div>

      <%= form_with model: @group, local:true do |f|%>

        <div class="field">
        <%= f.label :name, "グループ名" %><br />
        <%= f.text_field :name, class:"form-control" %>
        </div>

        <div class="field">
        <%= f.label :introduction, "紹介文" %><br />
        <%= f.text_area :introduction, class:"form-control" %>
        </div>

        <div class="field">
        <%= f.label :image, "グループ画像"%><br />
        <%= f.attachment_field :image %>
        </div>

        <div class="field">
        <%= f.hidden_field :owner_id, value: current_user.id %>
        </div>

        <div class="field">
        <%= f.submit "Update Group", class:"btn btn-info mt-2 mb-2" %>
        </div>

      <% end %>

    </div>
  </div>
</div>